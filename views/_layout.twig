		{% block css %}
		{% endblock %}
	</head>
	<body>
		<canvas id="background"></canvas>
		<div class="wrapper">
			{% block content %}
			{% endblock %}
		</div>

		<!-- JS files -->
		{% block js %}
		{% endblock %}
	</body>
</html>
